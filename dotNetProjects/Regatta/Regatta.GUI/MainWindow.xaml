<Window x:Class="Regatta.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
  
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="pnlStatus" Grid.Column="1">
            <Label x:Name="lblWerIstAmZug">Am Zug: </Label>
            
            </StackPanel>
            <Grid x:Name="regattaGrid" Grid.Column="2" Height="500" Width="600" DockPanel.Dock="Top">

            </Grid>
            
            <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" DockPanel.Dock="Bottom">
                <Button x:Name="btnZugBeenden">Zug Beenden</Button>
                <Button x:Name="btnZugZurueck">Zurück</Button>
                
            </StackPanel>
        </Grid>

</Window>
