<Window x:Class="WrapPanelAnordnung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="300">
    <StackPanel>
        <WrapPanel Margin="5">
            <Button Click="neu_Click">Button 1</Button>
            <Button>Button 2</Button>
            <Button>Button 3</Button>
            <Button>B 4</Button>
            <Button>Button 5</Button>
            <Button>Button 6</Button>
            <Button>Button 7</Button>
        </WrapPanel>
        
        <WrapPanel FlowDirection="RightToLeft" Margin="5">
            <Button>Button 8</Button>
            <Button>Button 9</Button>
            <Button Height="15">Button 10, Height 40</Button>
            <Button Height="30">Button 11</Button>
            <Button Width="50" Height="30">Button 12</Button>
        </WrapPanel>
        
        <!-- einheitliche Breite und Höhe für alle Elemente-->
        <WrapPanel ItemWidth="60" ItemHeight="30" Margin="5">
            <Button>Button 13</Button>
            <Button>Button 14</Button>
            <Button>Button 15</Button>
            <Button>Button 16</Button>
            <Button>Button 17</Button>
        </WrapPanel>
    </StackPanel>
</Window>
