<Window x:Class="DockPanelLRT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="425">
    <DockPanel>
        <Button DockPanel.Dock="Left">1: Left</Button>
        <StackPanel DockPanel.Dock="Right">
            <Button>SP 2 Right</Button>
            <Button>SP 3 Right</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button>SP Hor Top 4</Button>
            <Button>SP Hor Top 5</Button>
            <Button>SP Hor Top 6</Button>
        </StackPanel>
        <TextBlock Margin="10">Inhalt</TextBlock>
    </DockPanel>
</Window>
