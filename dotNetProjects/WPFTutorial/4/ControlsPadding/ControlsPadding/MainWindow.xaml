<Window x:Class="ControlsPadding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="225">
    <Canvas>
        <Button>1: (ohne)</Button>
        <Button Padding="0" Canvas.Left="100" x:Name="b2" Click="b2_Click">2:0</Button>
        <Button Padding="10" Canvas.Top="30" x:Name="b3" Click="b3_Click">3:10</Button>
        <!-- zwei Werte für jeweils rechts+links und oben+unten-->
        <Separator Canvas.Top="68" Margin="3" Width="100"></Separator>
        <Button Padding="30,10" Canvas.Top="80" x:Name="b4" Click="b4_Click">4:30,10</Button>
        <!-- vier werte, ab links im Uhrzeigersinn -->
        <Button Padding="30,10,80,0" Canvas.Top="150" x:Name="b5" Click="b5_Click">4:30,10</Button>
    </Canvas>
</Window>
